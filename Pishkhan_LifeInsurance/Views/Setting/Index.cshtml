@model Pishkhan_LifeInsurance.Data.DataBase.TblSetting

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>تنظیمات سیستم</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID"  value="@Model.ID" />
            <div class="form-group">
                <label asp-for="InsuranceNumber_Code" class="control-label"></label>
                <input asp-for="InsuranceNumber_Code" class="form-control" />
                <span asp-validation-for="InsuranceNumber_Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InsuranceNumber_CenterCode" class="control-label"></label>
                <input asp-for="InsuranceNumber_CenterCode" class="form-control" />
                <span asp-validation-for="InsuranceNumber_CenterCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InsuranceNumber_GarardadNumber" class="control-label"></label>
                <input asp-for="InsuranceNumber_GarardadNumber" class="form-control" />
                <span asp-validation-for="InsuranceNumber_GarardadNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InsuranceNumber_Year" class="control-label"></label>
                <input asp-for="InsuranceNumber_Year" class="form-control" />
                <span asp-validation-for="InsuranceNumber_Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pishkhan_Percent" class="control-label"></label>
                <input asp-for="Pishkhan_Percent" class="form-control" />
                <span asp-validation-for="Pishkhan_Percent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Supervisior_Percent" class="control-label"></label>
                <input asp-for="Supervisior_Percent" class="form-control" />
                <span asp-validation-for="Supervisior_Percent" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Pishkhan_Percent_OldInsurance" class="control-label"></label>
                <input asp-for="Pishkhan_Percent_OldInsurance" class="form-control" />
                <span asp-validation-for="Pishkhan_Percent_OldInsurance" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Supervisior_Percent_OldInsurance" class="control-label"></label>
                <input asp-for="Supervisior_Percent_OldInsurance" class="form-control" />
                <span asp-validation-for="Supervisior_Percent_OldInsurance" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CountTakeItem" class="control-label"></label>
                <input asp-for="CountTakeItem" class="form-control" />
                <span asp-validation-for="CountTakeItem" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">بازگشت به صفحه اصلی</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
