@model List<Pishkhan_LifeInsurance.Models.WageViewModels.DeleteWageViewModel>
@{
    ViewData["Title"] = "DeleteWage";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int rowId = 0;
}
<h2>حذف کارمزد</h2>
<div class="container">
    <h2 class="text-warning">Search</h2>
    <input class="form-control" id="myInput" type="text" placeholder="Search..">
    <br>
    <div class="text-center" id="loading"><img src="~/LoadingIcon.gif" /></div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th></th>
                <th>AgentName</th>
                <th>Year</th>
                <th>Month</th>
            </tr>
        </thead>
        <tbody id="myTable">

            @foreach (var item in Model)
            {
                <tr id="@(rowId+=1)">
                    <td><a href="#" parentId="@rowId" id="@item.AgentID,@item.Year,@item.Month" class="text-danger btnDeleteWage"><i class="glyphicon glyphicon-trash"></i></a></td>
                    <td>@item.AgentName</td>
                    <td>@item.Year</td>
                    <td>@item.Month</td>
                </tr>
            }

        </tbody>
    </table>
</div>

@*Start Modal*@
<div class="container">
    <!-- Trigger the modal with a button -->
    <a id="btnModal" href="#" data-toggle="modal" data-target="#myModal"></a>

    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">گزارش</h4>
                </div>
                <div class="modal-body">

                    <div class="text-center" id="divPm"></div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>
@*End Modal*@



@section Scripts {

    <script src="~/js/DeleteWageJavaScript.js"></script>
}